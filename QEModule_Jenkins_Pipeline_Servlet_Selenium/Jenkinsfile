pipeline {
	agent any
	
	stages {
	
		stage ('Compile Stage') {
		
			steps {
					sh '''
					export PATH=$PATH:$MAVEN_HOME/bin
					mvn clean compile
					'''
			}
		}
		
		stage ('Testing Stage') {
			
			steps {
					sh 'mvn test'
			}
			
		}

		stage ('Deployment Stage') {
			
			steps {
					sh 'mvn deploy'
			}
			
		}

	}
}