pipeline {
	agent any
	
	stages {
	
		stage ('Compile Stage') {
		
			steps {
					sh '''
					export PATH=$PATH:$MAVEN_HOME/bin
					cd QEModule_Jenkins_Pipeline_Servlet_Selenium
					mvn clean compile
					'''
			}
		}

		stage ('Deployment Stage') {
			
			steps {
					sh '''
					export PATH=$PATH:$MAVEN_HOME/bin
					cd QEModule_Jenkins_Pipeline_Servlet_Selenium
					mvn install -DskipTests tomcat7:deploy'''
			}
			
		}
		
		stage ('Testing Stage') {
			
			steps {
					sh '''
					export PATH=$PATH:$MAVEN_HOME/bin
					cd QEModule_Jenkins_Pipeline_Servlet_Selenium
					mvn test'''
			}
		}
	}
}