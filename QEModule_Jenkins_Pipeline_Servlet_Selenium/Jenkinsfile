pipeline {
	agent any
	
	stages {

		stage ('Compile Stage') {
			steps {
				script {
					if (isUnix()) {
						sh '''
						cd QEModule_Jenkins_Pipeline_Servlet_Selenium
						mvn clean compile
						'''
					} else {
						bat '''
						cd QEModule_Jenkins_Pipeline_Servlet_Selenium
						mvn clean compile
						'''
					}
				}
			}
		}

		stage ('Deployment Stage') {
			
			steps {
				script {
					if (isUnix()) {
						sh '''
						cd QEModule_Jenkins_Pipeline_Servlet_Selenium
						mvn install -DskipTests tomcat7:deploy'''
					} else {
						bat '''
						cd QEModule_Jenkins_Pipeline_Servlet_Selenium
						%MAVEN_HOME%/bin/mvn install -DskipTests tomcat7:deploy'''
					}
				}
			}
		}
		
		stage ('Testing Stage') {
			
			steps {
				script {
					if (isUnix()) {
						sh '''
						cd QEModule_Jenkins_Pipeline_Servlet_Selenium
						mvn test'''
					} else {
						bat '''
						cd QEModule_Jenkins_Pipeline_Servlet_Selenium
						%MAVEN_HOME%/bin/mvn test'''
					}
				}
			}
		}
	}
}